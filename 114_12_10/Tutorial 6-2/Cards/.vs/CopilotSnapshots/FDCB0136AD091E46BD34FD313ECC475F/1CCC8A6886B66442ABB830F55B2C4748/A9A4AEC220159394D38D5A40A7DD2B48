using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Cards
{
    /// <summary>
    /// 撲克牌展示窗體
    /// 用於展示和選擇不同的撲克牌，並顯示對應的牌張圖片
    /// </summary>
    public partial class Form1 : Form
    {
        /// <summary>
        /// 初始化窗體
        /// </summary>
        public Form1()
        {
            InitializeComponent();
        }

        /// <summary>
        /// 「顯示牌張」按鈕點擊事件
        /// 根據列表框中選擇的牌張，顯示對應的圖片
        /// </summary>
        private void showCardButton_Click(object sender, EventArgs e)
        {
            if (cardListBox.SelectedIndex != -1)
            {
                showSelectedCard(cardListBox.SelectedItem.ToString());
            }
            else
            {
                // 如果沒有選擇任何牌張，顯示提示信息
                MessageBox.Show("請先選擇一張牌！");
            }
        }

        /// <summary>
        /// 「離開」按鈕點擊事件
        /// 關閉當前窗體
        /// </summary>
        private void exitButton_Click(object sender, EventArgs e)
        {
            // 關閉窗體
            this.Close();
        }

        /// <summary>
        /// 根據選擇顯示對應的牌張圖片
        /// 此方法用於根據從列表框選擇的牌張名稱
        /// 顯示對應的牌張圖片，並隱藏其他圖片
        /// </summary>
        /// <param name="selectedCard">選定的牌張名稱</param>
        private void showSelectedCard(string selectedCard)
        {
            // 首先隱藏所有牌張圖片
            aceSpadesPictureBox.Visible = false;
            tenHeartsPictureBox.Visible = false;
            kingClubsPictureBox.Visible = false;

            // 根據選定的牌張名稱，顯示對應的圖片框
            if (selectedCard.Contains("黑桃"))
            {
                // 顯示黑桃 Ace 圖片
                aceSpadesPictureBox.Visible = true;
            }
            else if (selectedCard.Contains("紅心"))
            {
                // 顯示紅心 10 圖片
                tenHeartsPictureBox.Visible = true;
            }
            else if (selectedCard.Contains("梅花"))
            {
                // 顯示梅花 King 圖片
                kingClubsPictureBox.Visible = true;
            }
        }
    }
}
